{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2020",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*", "server.ts"],
	"exclude": []
}
